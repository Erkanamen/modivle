		link(href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,600', rel='stylesheet', type='text/css')

		//- useragent and env specific styles
		if useragent == "mobile"
			meta(name="viewport", content="width=device-width, user-scalable=no")
			if env == "prod"
				link(rel="stylesheet", href="/css/mobile_app.css")
			else if env == "dev"
				link(rel="stylesheet/less", href="/css/mobile_app.less")
				script(src="/js/libs/less-1.1.5.min.js")
		else if useragent == "desktop"
			if env == "prod"
				link(rel="stylesheet", href="/css/desktop_app.css")
			else if env == "dev"
				link(rel="stylesheet/less", href="/css/desktop_app.less")
				script(src="/js/libs/less-1.1.5.min.js")

